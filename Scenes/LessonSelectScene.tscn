script/source = "extends Node

@onready var go_back_button = $CanvasLayer/GoBackButton
@onready var vbox = $ScrollContainer/VBoxContainer

var data = [\"l1\",\"l2\", \"l3\"]

func _ready() -> void:
	go_back_button.pressed.connect(NavigationManager.go_back)

	for index in data.size():
		var button = Button.new()
		button.text = data[index]
		button.set_meta(\"index\", index)
		button.pressed.connect(_on_button_pressed.bind(go_back_button))
		vbox.add_child(button)

func _on_button_pressed(button: Button):
	print(\"Pressed:\", button.get_meta(\"index\"))
"

