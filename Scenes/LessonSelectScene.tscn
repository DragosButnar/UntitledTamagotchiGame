[sub_resource type="GDScript" id="GDScript_shtku"]
script/source = "extends Node

@onready var go_back_button = $CanvasLayer/GoBackButton
@onready var vbox = $ScrollContainer/VBoxContainer

var lessons

func _ready() -> void:
	go_back_button.pressed.connect(NavigationManager.go_back)

	lessons = DatabaseManager.get_all_lessons()

	for index in lessons.size():
		var lesson = lessons[index]
		var button = Button.new()
		button.text = lesson[\"name\"]
		button.set_meta(\"lesson_id\", lesson[\"id\"])
		button.pressed.connect(_on_button_pressed.bind(button))
		vbox.add_child(button)

func _on_button_pressed(button: Button):
	NavigationManager.show_screen(
		FilePaths.LESSON_DISPLAY_SCENE, 
		{\"lesson_id\": button.get_meta(\"lesson_id\")}
	)
"

