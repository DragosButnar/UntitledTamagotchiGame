script/source = "extends Node

@onready var go_back_button = $CanvasLayer/GoBackButton
@onready var vbox = $ScrollContainer/VBoxContainer

var activities := {\"Two player soccer\": FilePaths.ACTIVITY_COOP_SOCCER,\"A2\":\"\", \"A3\":\"\"}

func _ready() -> void:
	go_back_button.pressed.connect(NavigationManager.go_back)

	for activity in activities:
		var button = Button.new()
		button.text = activity
		button.pressed.connect(_on_button_pressed.bind(activities[activity]))
		vbox.add_child(button)
		
	#TODO: Read from DB

func _on_button_pressed(file: String):
	NavigationManager.show_screen(file)
"

